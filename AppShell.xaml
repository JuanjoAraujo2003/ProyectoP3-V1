<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Proyecto_P3.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Proyecto_P3"
    xmlns:views="clr-namespace:Proyecto_P3.Views"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent Title="Inicio"
              ContentTemplate="{DataTemplate views:Inicio}"
              />
    <ShellContent
        Title="Reservar Habitacion"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="About Us"
        ContentTemplate="{DataTemplate views:INFO}"
       />
    <ShellContent
        Title="Informacion de contacto"
        ContentTemplate="{DataTemplate views:Contacto}"
       />
    <ShellContent
        Title="Ciudades de hoteles"
        ContentTemplate="{DataTemplate views:ApiCiudades}"
       />
    <ShellContent
        Title="Empleados del hotel"
        ContentTemplate="{DataTemplate views:EmpleadosHotel}"
       />


</Shell>
