<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto_P3.Views.Contacto"
             Title="Informacion de contacto">

    <Grid>
        <Image Source="habitacion.jpg" Aspect="AspectFill"/>

        <StackLayout BackgroundColor="#80000000" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <Label Text="Nuestra información de contacto" FontSize="Large" TextColor="White" HorizontalOptions="Center"/>
            <Label x:Name="lblDireccion" FontSize="Medium" TextColor="White" HorizontalOptions="CenterAndExpand"/>
            <Label x:Name="lblEmail" FontSize="Medium" TextColor="White" HorizontalOptions="Center"/>
            <Label x:Name="lblPhone" FontSize="Medium" TextColor="White" HorizontalOptions="Center"/>
            <Button Text="Mostrar Información" Clicked="OnShowContactClicked" x:Name="btnMostrarContacto" HorizontalOptions="Center"/>
        </StackLayout>
    </Grid>

</ContentPage>